<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1><%= t "borrowings.pending.content_1" %></h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item">
            <%= link_to t("borrowings.pending.home"), admin_root_url %>
          </li>
          <li class="breadcrumb-item active"><%= t "borrowings.pending.pendd" %></li>
        </ol>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>
<section class="content">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title"></h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
          <table id="example3" class="table table-bordered table-hover">
            <thead>
              <tr>
                <th><%= t "borrowings.pending.id" %></th>
                <th><%= t "borrowings.pending.code" %></th>
                <th><%= t "borrowings.pending.name" %></th>
                <th><%= t "borrowings.pending.time" %></th>
                <th><%= t "borrowings.pending.status" %></th>
                <th><%= t "borrowings.paying.action" %></th>
              </tr>
            </thead>
            <tbody>
              <% Borrowing.pending.each_with_index do |borrowing, index| %>
                <tr>
                  <td><%= index + Settings.number %></td>
                  <td><%= borrowing.borrow_code %></td>
                  <td><%= borrowing.user_name %></td>
                  <td><%= time_ago_in_words borrowing.created_at %></td>
                  <td class="updateBorrowing">
                    <%= link_to admin_borrowing_path(borrowing), method: :patch,
                      data: { confirm: "#{t "borrowings.paying.confirm" }" } ,remote: true do %>
                      <span class="badge badge-pill badge-warning">
                        <%= t "borrowings.pending.pend" %>
                      </span>
                    <% end %>
                  </td>
                  <td class="deleteBorrowing">
                    <%= link_to "#" , data: { toggle: "modal", target: "#borrowing-#{borrowing.id}" } do %>
                      <span class="badge rounded-pill bg-success">
                        <i class="fas fa-eye"></i>
                      </span>
                    <% end %>
                    <%= render "borrowing", borrowing: borrowing %>
                    <%= link_to admin_borrowing_path(borrowing), method: :delete,
                      remote: true, data: { confirm: "#{t "borrowings.paying.confirm"}" } do %>
                      <span class="badge rounded-pill bg-danger">
                        <i class="fas fa-trash-alt"></i>
                      </span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
