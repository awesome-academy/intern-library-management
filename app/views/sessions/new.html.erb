<div class="container">
  <div class="kpx_login">
    <h3 class="kpx_authTitle">Login or <a href="#">Sign up</a></h3>
    <div class="row kpx_row-sm-offset-3 kpx_socialButtons">
      <div class="col-xs-2 col-sm-2">
        <%= link_to "#", class:"btn btn-lg btn-block kpx_btn-facebook",
          data: { toggle: "tooltip", placement:"top" }, title: "Facebook" do %>
          <i class="fab fa-facebook fa-2x"></i>
          <span class="hidden-xs"></span>
        <% end %>
    </div>
    <div class="col-xs-2 col-sm-2">
      <%= link_to "#", class:"btn btn-lg btn-block kpx_btn-twitter",
        data: { toggle: "tooltip", placement:"top" }, title: "Twitter" do %>
        <i class="fab fa-facebook fa-2x"></i>
        <span class="hidden-xs"></span>
      <% end %>
    </div>
    <div class="col-xs-2 col-sm-2">
      <%= link_to "#", class:"btn btn-lg btn-block kpx_btn-google-plus",
        data: { toggle: "tooltip", placement:"top" }, title: "Google Plus" do %>
        <i class="fab fa-facebook fa-2x"></i>
        <span class="hidden-xs"></span>
      <% end %>
    </div>
  </div><br>
  <div class="row kpx_row-sm-offset-3 kpx_socialButtons">
    <div class="col-xs-2 col-sm-2">
      <%= link_to "#", class:"btn btn-lg btn-block kpx_btn-github",
        data: { toggle: "tooltip", placement:"top" }, title: "GitHub" do %>
        <i class="fab fa-facebook fa-2x"></i>
        <span class="hidden-xs"></span>
      <% end %>
    </div>
    <div class="col-xs-2 col-sm-2">
      <%= link_to "#", class:"btn btn-lg btn-block kpx_btn-soundcloud",
        data: { toggle: "tooltip", placement:"top" }, title: "SoundCloud" do %>
        <i class="fab fa-facebook fa-2x"></i>
        <span class="hidden-xs"></span>
      <% end %>
    </div>
    <div class="col-xs-2 col-sm-2">
      <%= link_to "#", class:"btn btn-lg btn-block kpx_btn-steam",
        data: { toggle: "tooltip", placement:"top" }, title: "Steam" do %>
        <i class="fab fa-facebook fa-2x"></i>
        <span class="hidden-xs"></span>
      <% end %>
    </div>
  </div><br>
  <div class="row kpx_row-sm-offset-3 kpx_socialButtons">
    <div class="col-xs-2 col-sm-2">
      <%= link_to "#", class:"btn btn-lg btn-block kpx_btn-linkedin",
        data: { toggle: "tooltip", placement:"top" }, title: "LinkedIn" do %>
        <i class="fab fa-facebook fa-2x"></i>
        <span class="hidden-xs"></span>
      <% end %>
    </div>
    <div class="col-xs-2 col-sm-2">
      <%= link_to "#", class:"btn btn-lg btn-block kpx_btn-stumbleupon",
        data: { toggle: "tooltip", placement:"top" }, title: "Stumble Upon" do %>
        <i class="fab fa-facebook fa-2x"></i>
        <span class="hidden-xs"></span>
      <% end %>
    </div>
    <div class="col-xs-2 col-sm-2">
      <%= link_to "#", class:"btn btn-lg btn-block kpx_btn-tumblr",
        data: { toggle: "tooltip", placement:"top" }, title: "Tumblr" do %>
        <i class="fab fa-facebook fa-2x"></i>
        <span class="hidden-xs"></span>
      <% end %>
    </div>
  </div>
  <div class="row kpx_row-sm-offset-3 kpx_loginOr">
    <div class="col-xs-12 col-sm-6">
      <hr class="kpx_hrOr">
      <span class="kpx_spanOr"><%= t ".or" %></span>
    </div>
  </div>
  <div class="row kpx_row-sm-offset-3">
    <div class="col-xs-12 col-sm-6">
      <%= form_for :session, url: login_path, class: "kpx_loginForm" do |f| %>
        <div class="input-group">
          <span class="input-group-addon"><span class="fa fa-user"></span></span>
          <%= f.email_field :email, class: "form-control",
            placeholder: t("sessions.new.placeholder.email") %>
        </div>
        <hr />
        <div class="input-group">
          <span class="input-group-addon"><span class="fa fa-key"></span></span>
          <%= f.password_field :password, class: "form-control",
            placeholder: t("sessions.new.placeholder.password") %>
        </div>
        <hr />
        <%= f.submit t("sessions.new.submit"),
          class: "btn btn-lg btn-outline-primary btn-block" %>
			<% end %>
	  </div>
  </div>
  <div class="row kpx_row-sm-offset-3">
    <div class="col-xs-12 col-sm-3">
    <p></p>
    <label class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input" value="remember-me">
      <span class="custom-control-indicator"></span>
      <span class="custom-control-description"><%= t".remember"%></span>
    </label>
  </div>
  <div class="col-xs-12 col-sm-3">
    <p class="kpx_forgotPwd">
      <%= link_to t(".forgot"), "#" %>
    </p>
  </div>
</div>
