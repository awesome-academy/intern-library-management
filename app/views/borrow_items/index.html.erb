<div class="ht__bradcaump__area bg-image--3">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="bradcaump__inner text-center">
          <h2 class="bradcaump-title"><%= t ".borrowing" %></h2>
          <nav class="bradcaump-content">
            <%= link_to t(".home"), root_url, class:"breadcrumb_item" %>
            <span class="brd-separetor">/</span>
            <span class="breadcrumb_item active"><%= t ".borrowing" %></span>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="cart-main-area section-padding--lg bg--white">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-sm-12 ol-lg-12">
        <form action="#">
          <div class="table-content wnro__table table-responsive">
            <table>
              <thead>
                <tr class="title-top">
                  <th class="product-thumbnail"><%= t ".id" %></th>
                  <th class="product-thumbnail"><%= t ".book" %></th>
                  <th class="product-name"><%= t ".name" %></th>
                  <th class="product-remove"><%= t ".action" %></th>
                </tr>
              </thead>
              <tbody>
                <% @book_borrow.each_with_index do |borrow_item, index| %>
                  <tr>
                    <td><%= index +1 %></td>
                    <% borrow_item.images.each do |image| %>
                      <td class="product-thumbnail">
                        <%= link_to "#" do %>
                          <%= image_tag image.link_url if image.present? %>
                       <% end %>
                      </td>
                    <% end %>
                    <td class="product-name">
                      <%= link_to borrow_item.name ,"#"%>
                    </td>
                    <td class="product-remove">
                      <%= link_to "#" do %>
                        <i class="far fa-trash-alt"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </form>
        <div class="cartbox__btn">
          <ul class="cart__btn__list d-flex flex-wrap flex-md-nowrap flex-lg-nowrap justify-content-between">
            <li>
              <%= form_for @current_borrow do |f| %>
                <%= f.hidden_field :user_id, value: current_user.id if logged_in? %>
                <%= f.submit "Borrow", class: "btn btn-outline-warning" %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
